<script src="player-bundle.js"></script>

<body>

        <div class="row mt-5">
                <div class="col-md-6 m-auto">
                    <div class="card card-body">
                        <h1 class="text-center mb-3">
                            <i class="fas fa-user-plus"></i> Damn Music Player
                        </h1>
                    </div>
                </div>

    <div class="container form-group">
        <div class="card card-body" id="Controller">
            <div class="row mt-5">
                <div class="text-center mb-3 ">
                    <button class="btn btn-success" onclick="play()">Play</button>
                    <button class="btn btn-danger" onclick="pause()">Pause</button>
                    <button class="btn btn-info" onclick="next()">Next</button>
                    <br/>
                    Volume: <input type="range" min="0" max="100" value="80" class="slider" id="volume-range">
                    <br/>
                </div>
            </div>
        </div>

        <h5 class="text-center mb-3">Created by Saurabh Lodha &#9829;
            </h5>
            <h5 class="text-center mb-3">Designed by Akash Pande
                </h5>

        </div>
    </div>

</body>
<style>
    #Controller{
        margin-left: 200px;
        padding: 50px;
    }
</style>
<script>
    var volume = document.getElementById("volume-range");
    volume.oninput = function () {
        setVolume(this.value);
    }
</script>